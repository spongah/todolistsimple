<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form class="form-horizontal">
  <fieldset>
    <legend></legend>

  <div class="col-lg-offset-2 col-lg-8 jumbotron">

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control", rows: 5 %>
      </div>
        <div class="">
            <%= f.label :difficulty %>
            <%= f.select :difficulty, options_for_select(1..5) %>
            <%= f.label :due_date, style: "padding-left: 40px" %>
            <%= f.date_select :due_date%>
            <%= f.label :completed, style: "padding-left: 40px" %>
            <%= f.check_box :completed, class: "check-box" %>
        </div>
      <div style="padding-top: 15px">
      <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>

  </div>
  </fieldset>
</form>
<% end %>
